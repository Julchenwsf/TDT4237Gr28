{% extends 'base.twig' %}

{% block content %}

<h2>Login</h2>

{{ flash.error|raw }} <br />

{{ secureForm(__controller, ["user", "pass", "submit"])|raw }}

<label>Username: </label>
<input type="text" name="user"> <br />
<label>Password: </label>
<input type="password" name="pass"> <br />
<input type="submit" name="submit" value="Log in">
{{ closeSecureForm()|raw }}
{% endblock %}
<a href="{{ urlFor("passwordreset") }}">Lost your password?</a>
